@media screen and (min-width: 1024px) {
  .header-button{
  padding-top: 0.7rem;
  padding-bottom: 0.7rem;
  padding-left: 2.5rem;
  padding-right: 2.5rem;
  }
  .clip{
    clip-path: polygon(
      0% 0%,
      100% 0%,
      100% calc(100% - 3em),
      50% 100%,
      0% calc(100% - 3em)
    );
  }
}

@media (max-width: 1023px) {
  .header-button{
  padding-top: 0.4rem;
  padding-bottom: 0.4rem;
  padding-left: 1.5rem;
  padding-right: 1.5rem;
  }
  .clip{
    clip-path: polygon(
      0% 0%,
      100% 0%,
      100% calc(100% - 2.5em),
      50% 100%,
      0% calc(100% - 2.5em)
    );
  }
}


.header-button{
  border-radius: 3px;
  background: {{settings.buttons_color}};
  color: {{settings.buttons_text_color}}
}

.header-section {
  background: {{ settings.header_background_color }};
  height: {{settings.header_height}}px
}

body{
 margin: 0;
}
