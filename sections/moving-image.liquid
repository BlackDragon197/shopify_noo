<div class="">
  <section class="flex flex-col mt-7 ml-9 mr-8 font-sf font-normal sm:m-15 sm:mr-sm-sec sm:ml-sm-sec">
    <div class="flex flex-col content-start items-start gap-7 relative" x-data="{
      activeBlock: 1,
      images: [
          'https://cdn.shopify.com/s/files/1/0648/4606/9896/files/Screenshot2024-09-20at7.30.50PM.png?v=1726878666',
          'https://cdn.shopify.com/s/files/1/0648/4606/9896/files/Screenshot2024-09-20at7.30.37PM.png?v=1726878666'
      ],
      colors: {
            1: 'Brown',
            2: 'Fennel-seed'
        },
      getActiveImage() {
          return this.activeBlock === 1 ? this.images[0] : this.images[1];
      },
      getColorText() {
            return this.colors[this.activeBlock];
        },
      selectBlock(blockNumber) {
          this.activeBlock = blockNumber;
      }
  }">
      <div class="w-[52%]">
        <!-- Image Display -->
        <div class="w-full h-full">
          <img :src="getActiveImage()" alt="Selected Image" class="w-full h-full">
        </div>
      </div>
      <div class="flex flex-col max-w-[25.5%] w-full mb-20 h-[25.5vw]">
        <div class="flex justify-between flex-1">
          <div><img src="{{ 'dollar.png' | asset_img_url }}" alt="" class="w-3 h-4 //sm:w-[27px] sm:h-[35px]"></div>
          <div class="square-small animate-move-vertical animate-vertical-pc bg-purple-300 w-[38px] h-[38px] rounded-8 shadow-squares sm:w-[75px] sm:h-[75px]"></div>
        </div>
        <div class="flex content-center flex-1">
          <div class="w-1/2 flex justify-center">
            <div class="square-large animate-move-vertical2 animate-vertical-pc2 bg-purple-600 w-[22.5px] h-[22.5px] rounded-5 shadow-squares sm:w-[45px] sm:h-[45px]"></div>
          </div>
          <div class="w-1/2 flex justify-center items-end">
            <div><img src="{{ 'dollar.png' | asset_img_url }}" alt="" class="w-4 h-5"></div>
          </div>
        </div>
      </div>
      <div class="absolute top-20 right-0 rounded-12 p-4 bg-white max-w-[65.5%] shadow-combined sm:top-40 sm:p5 sm:pr-[30px] sm:pl-[30px]">
        <div class="text-transparent bg-span-linear bg-clip-text text-xl mb-3 font-bold sm:text-4xl sm:mb-5">
          Sweater in Everyday Cotton
        </div>
        <div class="text-text-blue text-xs mb-4 sm:text-base sm:mb-8">
          The perfect boxy-fit sweater, The Boxy Sweater in Everyday Cotton is a layering essential. Featuring a chunky rib stitch at the crew neckline, along the hem, and sleeve cuffs, it has dropped shoulders for a relaxed edge. It's made with 100% organic cotton, and designed to be styled solo or easily topped with a blazer or cardigan
        </div>
        <div class="text-text-blue2 text-base mb-2">
          Color: <span x-text="getColorText()"></span>
        </div>
        <div class="flex gap-2 mb-4 sm:mb-8">
          <div @click="selectBlock(1)" :class="activeBlock === 1 ? 'border-selected border-black' : 'border-default border-slate-300'" class="w-5 h-5 p-[2.5px] rounded-80 sm:w-9 sm:h-9 sm:p-[4.5px]">
            <div class="rounded-12 bg-yellow-800 h-full"></div>
          </div>
          <div @click="selectBlock(2)" :class="activeBlock === 2 ? 'border-selected border-black' : 'border-default border-slate-300'" class="w-5 h-5 p-[2.5px] rounded-80 sm:w-9 sm:h-9 sm:p-[4.5px]">
            <div class="rounded-12 bg-lime-400 h-full"></div>
          </div>
        </div>
        <div class="w-full rounded-80 bg-[#341188] pt-2 pb-2 flex justify-center items-center text-white text-base gap-[7px] font-bold sm:pt-3 sm:pb-3 sm:text-xl sm:gap-3 sm:mb-4 sm:mt-4">
          Add to Cart
          <div class="h-full min-h-[16px] w-[2px] rounded-12 bg-white sm:min-h-[20px]"></div>
          $40
        </div>
      </div>
    </div>
    <div class="flex-col">
      <div class="text-4xl text-transparent bg-span-linear bg-clip-text mb-5 font-bold">Start making money from all your returns</div>
      <div class="mb-7 text-blue text-[16px]" >Built for shopify merchants of all sizes.</div>
