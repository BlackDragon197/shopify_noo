<div class="">
  <section class="flex flex-col pt-7 pl-9 pr-8">
    <div class="flex flex-col content-start items-start">
      <div class="w-[52%]">
        <img src="https://cdn.shopify.com/s/files/1/0648/4606/9896/files/Screenshot2024-09-20at7.30.50PM.png?v=1726878666" alt="" class="src">
      </div>
      <div class="flex flex-col gap-10 max-w-[25.5%] w-full">
        <div class="flex justify-between">
          <div><img src="{{ 'dollar.png' | asset_img_url }}" alt="" class="w-3 h-4"></div>
          <div class="square-small animate-move-vertical animate-vertical-pc bg-purple-300 w-[75px] max-w-[75px] h-[75px] rounded-8"></div>
        </div>
        <div class="flex content-center">
          <div class="w-1/2">
            <div class="square-large animate-move-vertical2 animate-vertical-pc2 bg-purple-600 w-11 h-11 rounded-5"></div>
          </div>
          <div class="w-1/2">
            <div><img src="{{ 'dollar.png' | asset_img_url }}" alt="" class="w-4 h-5"></div>
          </div>
        </div>
      </div>
      
    </div>
    <div class="flex-col">
      <div class="text-4xl text-transparent bg-span-linear bg-clip-text">Start making<br> money from all your <br>returns</div>
      <div>Built for shopify merchants of all sizes.</div>
      <div class="flex">
        <div>but1</div>
        <div>but2</div>
      </div>
    </div>
    <img src="{{ 'bg-mob.svg' | asset_img_url }}" alt="" class="absolute filter-invis-mob left-9 -z-10">
  </section>
  {% comment %} {% render 'site-nav' %} {% endcomment %}
  <style>
    .filter-invis-mob{
      filter: linear-gradient(to right, rgba(166, 136, 202, 0) 0%, #E040F9 13%, #FCF9FF 100%)
    }
    #shopify-section-header, #shopify-section-footer{
      display: none;
    }
  </style>
</div>

{% schema %}
  {
    "name": "Hero Image2",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image 233"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Hero image + text block</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Moving image",
        "category": "Image"
      }
    ]
  }
{% endschema %}